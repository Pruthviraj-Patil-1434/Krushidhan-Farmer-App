<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/bck5"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="center_horizontal"
        android:shadowColor="@color/black"
        android:text="प्रमुख पीके "
        android:textColor="#000"
        android:textColorHighlight="#009C0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="140dp"
        android:layout_height="124dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="86dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ghu" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c4"
        android:layout_width="140dp"
        android:layout_height="124dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="31dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/mka" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c5"
        android:layout_width="140dp"
        android:layout_height="124dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="289dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/jri" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c6"
        android:layout_width="140dp"
        android:layout_height="124dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="31dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/bajri" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/jht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c5"
        android:layout_marginStart="87dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="center_horizontal"
        android:shadowColor="@color/black"
        android:text="ज्वारी"
        android:textColor="#000"
        android:textColorHighlight="#009C0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c1"
        android:layout_marginStart="87dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="center_horizontal"
        android:shadowColor="@color/black"
        android:text="गहू "
        android:textColor="#000"
        android:textColorHighlight="#009C0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bjt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c6"
        android:layout_alignLeft="@+id/gh"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="center_horizontal"
        android:shadowColor="@color/black"
        android:text="बाजरी"
        android:textColor="#000"
        android:textColorHighlight="#009C0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c4"
        android:layout_marginStart="288dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="center_horizontal"
        android:shadowColor="@color/black"
        android:text="मका"
        android:textColor="#000"
        android:textColorHighlight="#009C0F"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>

