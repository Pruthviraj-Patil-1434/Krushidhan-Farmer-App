<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".lst">

        <TextView
            android:id="@+id/ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="36dp"
            android:text="ठिबक सिंचन"
            android:textColor="#151515"
            android:textSize="34sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/crd"
            android:layout_width="349dp"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/ttl"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/sld"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:auto_cycle="true"
                app:corner_radius="20"
                app:delay='0'
                app:error_image="@color/green"
                app:period="2000"
                app:placeholder="@color/black" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crd"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="ठिबक सिंचन"
            android:textColor="#121212"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ifd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dt"
            android:layout_marginStart="23dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:text="ठिबक सिंचन म्हणजे पिकांच्या झाडाच्या मुळाशी लहानशा नळीद्वारे थेंबथेंब किंवा बारीक धारेने पाणी देण्याची आधुनिक पद्धत. ही वापरताना जमिनीचा दर्जा, पिकांची जात, पिकांचे स्वरूप, बाष्पीभवनाचे प्रमाण लक्षात घेऊन नंतर त्यांच्या गरजेनुसार पॉलिथीनच्या नळ्यांचे जाळे पसरतात. ठिबक सिंचनाचा शोध इस्राईलमधील तज्ज्ञ सिमचा ब्लास यांनी लावला.या पद्धतीत,जमिनीत पाणी जिरण्याचा जो वेग असतो, त्यापेक्षा कमी वेगाने पिकास पाणी दिले जाते. मुख्यत्वे करून पाणी थेंबाथेंबाने अथवा सूक्ष्म धारेने दिले जाते. ठिबक सिंचन पद्धतीचा अवलंब करणे आवश्यक आहे. ठिबक सिंचनात महाराष्ट्र अग्रेसर असून संपूर्ण भारताच्या ६० टक्के ठिबक सिंचन एकट्या महाराष्ट्रात केले जाते.." />

        <TextView
            android:id="@+id/prf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ifd"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:text="ठिबक सिंचनाचे मुख्य फायदे"
            android:textColor="#020202"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/prf"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:text="१. पाणी हे जमिनीला न देता पिकास दिले जाते.\n
२. वाफसा स्थिती कायम राहत असल्याने पिकाची वाढ जोमदार आणि सतत होते.\n
३. पिकाला रोजच अगर दिवसाआड अथवा गरजेनुसार पाणी दिले जाते.\n
४. मुळाच्या कार्यक्षेत्रात पाणी, माती, हवा यांचा नेहमी समन्वय साधला जातो.\n"
            android:textColor="#000000" />
    </RelativeLayout>
</ScrollView>

